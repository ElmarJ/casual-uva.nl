<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">
	{% include "components/head.njk" %}
	<body>
		<header>
			<p>
				<img src="/static/img/logo.jpg" alt="Casual UvA (logo)" height="100" width="100">
			</p>
			<h1 class="title">{{ metadata.title }}</h1>
			{% include "components/nav.njk" %}
		</header>
		<section class="tiktok">
			<h2>TikTok</h2>
			{% include "components/tiktokfeed.njk" %}
